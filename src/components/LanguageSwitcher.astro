---
const currentLang = Astro.url.pathname.startsWith("/en") ? "en" : "es";
const otherLang = currentLang === "en" ? "es" : "en";

// Usamos rutas absolutas para evitar concatenaciones err칩neas
const routes = {
  en: "/en/", // Ruta correcta para la p치gina en ingl칠s
  es: "/es/", // Ruta correcta para la p치gina en espa침ol
};
---

<div class="language-switch">
  <a
