<style>
  .language-switch {
    display: flex;
    gap: 10px;
    position: fixed;
    top: 10px;
    right: 10px;
  }
  .language-switch a {
    font-size: 2rem;
    text-decoration: none;
    cursor: pointer;
  }
  .language-switch a:hover {
    transform: scale(1.2);
  }
  .language-switch a[aria-current="page"] {
    opacity: 0.5;
