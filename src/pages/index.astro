---
// Web routes
import Layout from "../layout/Layout.astro";
import Card from "../components/Card.astro";
import { colors, wordColors } from "../utils/neonColors";
import ColumLayout from "../layout/ColumLayout.astro";
import WordNeonColor from "../components/WordNeonColor";
import LanguageCard from "../components/LanguageCard.astro";
import TypeWritter from "../components/TypeWritter.astro";
import WordNeonColorAstro from "../components/WordNeonColorAstro.astro";

// Web values
const titlePage = "Alejandro Lucena - Developer";

// Functions
import { Icon } from "astro-icon/components";
import { FaGithub, FaLinkedin } from "react-icons/fa6";
import { MdEmail } from "react-icons/md";
---

<Layout language="en" titlePage={titlePage}>
  <div
    class="greeting gap-4 mb-8 text-white flex flex-col"
    style="margin-right: 1050px;"
  >
    <h1 class="text-5xl">Alejandro Lucena</h1>
    <h2>
      <TypeWritter
        text="Web, Android and Java developer"
        speed={150}
        delay={1000}
        showBlink={false}
      />

      <!--
<WordNeonColorAstro word="Web" color={wordColors.yellow} effect={false} />,
  <WordNeonColorAstro word="Web" color={wordColors.yellow} effect={false} />,
   and
   <WordNeonColorAstro word="Web" color={wordColors.yellow} effect={false} />
  developer
-->
    </h2>
  </div>

  <div id="bigger-div">
    <Card borderColor={colors.purple} width="600px" height="510px" title="">
      <p class="text-xl">
        My name is <WordNeonColor
          client:load
          word="Alejandro Lucena"
          color={wordColors.blue}
          effect={true}
        /> and I am a student of cross-platform application development, I am <WordNeonColor
          client:load
          word="self-taught"
          color={wordColors.darkblue}
          effect={true}
        /> so I learned web development on own.
      </p>
      <hr />
      <p class="text-xl">
        I have over a year of experience in <WordNeonColor
          client:load
          word="Java"
          color={wordColors.orange}
          effect={true}
        /> and some months in
        <WordNeonColor
          client:load
          word="JavaScript"
          color={wordColors.yellow}
          effect={true}
        />. I really enjoy learning on my own in addition to what is taught in
        class.
      </p>
      <div class="flex gap-11 mt-12">
        <LanguageCard
          showBorderAndShadow={true}
          set="si"
          color="#3358ff"
          iconName="SiMysql"
        />
        <LanguageCard
          showBorderAndShadow={true}
          set="fa"
          color="orange"
          iconName="FaJava"
        />
        <LanguageCard
          showBorderAndShadow={true}
          set="fa"
          color="#00DF7F"
          iconName="FaAndroid"
        />
      </div>
    </Card>

    <ColumLayout>
      <Card
        align={true}
        borderColor={colors.blue}
        width="350px"
        height="242px"
        title="Skills"
      >
        <div class="wrapper flex gap-4">
          <div class="first">
            <LanguageCard set="fa" color="#000" iconName="FaGithub" />
          </div>

          <div class="second">
            <LanguageCard set="si" color="#f0db4f" iconName="SiJavascript" />
          </div>

          <div class="third">
            <LanguageCard set="fa" color="#61DBFB" iconName="FaReact" />
          </div>

          <div class="fourth">
            <LanguageCard set="si" color="#ff5a03" iconName="SiAstro" />
          </div>

          <div class="fifth">
            <LanguageCard set="fa" color="#FFF" iconName="FaLinux" />
          </div>

          <div class="sixth">
            <LanguageCard set="fa" color="#ff873d" iconName="FaGitAlt" />
          </div>

          <div class="seventh">
            <LanguageCard set="fa" color="orange" iconName="FaJava" />
          </div>

          <div class="eighth">
            <LanguageCard set="si" color="#3358ff" iconName="SiMysql" />
          </div>

          <div class="ninth">
            <LanguageCard set="fa" color="#00DF7F" iconName="FaAndroid" />
          </div>
        </div>
      </Card>
      <Card
        align={true}
        borderColor={colors.green}
        width="350px"
        height="242px"
        title="Recent Certification"
      >
        <Icon class="text-9xl flex m-auto" name="cambridge" />
        <p>First Certificate in English B2</p>
      </Card>
    </ColumLayout>

    <ColumLayout>
      <Card
        borderColor={colors.red}
        width="450px"
        height="242px"
        title="Professional Expereience"
      >
        <p>
          At the moment, I am studying and have not had the opportunity to gain
          professional experience. I have been
          <WordNeonColor word="contacted" color="#fff" effect={false} /> by some
          companies interested in my profile, but due to academic commitments and
          scheduling conflicts, I was unable to accept those offers at the time.
          üòÖ üßëüèª‚Äçüéì
        </p>
      </Card>
      <a
        href="/public/CV_AlejandroLucenaDiaz_en.pdf"
        download="CV_AlejandroLucenaDiaz_en.pdf"
      >
        <Card
          blue={true}
          borderColor={colors.yellow}
          width="450px"
          height="242px"
          title="Resume"
        >
          <p>
            Click here to download my resumen! I hope you like it
            <br />
            ‚¨áüòÅ
          </p>
        </Card>
      </a>
    </ColumLayout>
  </div>
  <div>
    <div class="social-media text-5xl text-white flex-row">
      <a
        href="mailto:alucena1002@gmail.com?subject=¬°Hello%20Alejandro!&body=I%20would%20like20to%20contact%20with%20you%20because..."
      >
        <MdEmail />
      </a>
      <a href="https://www.github.com/Lucenabo">
        <FaGithub />
      </a>
      <a href="https://www.linkedin.com/in/alucenad">
        <FaLinkedin />
      </a>
    </div>
    <div class="text-lg text-white button-email">
      <button id="copy-button">alucena1002@gmail.com </button>
      <p id="copied-message" class="mt-2 text-sm text-green-500 hidden">
        Email copied!
      </p>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const copyButton = document.getElementById("copy-button");
        const copiedMessage = document.getElementById("copied-message");

        if (!copyButton || !copiedMessage) {
          console.error("Elementos del DOM no encontrados");
          return;
        }

        copyButton.addEventListener("click", () => {
          const email: string = "alucena1002@gmail.com";

          navigator.clipboard
            .writeText(email)
            .then(() => {
              copyButton.classList.add("hidden");
              copiedMessage.classList.remove("hidden"); // Muestra el mensaje
              setTimeout(() => copyButton.classList.remove("hidden"), 2000);
              setTimeout(() => copiedMessage.classList.add("hidden"), 2000); // Oculta el mensaje despu√©s de 2 segundos
            })
            .catch((err: unknown) => {
              console.error("Error al copiar al portapapeles:", err);
            });
        });
      });
    </script>
    <style>
      hr {
        border: 1px solid rgb(91, 91, 91);
        width: 100%;
        margin: 20px 0;
      }

      #bigger-div {
        display: flex;
      }

      @media (max-width: 1470px) {
        *::before {
          content: "La versi√≥n m√≥vil no se encuentra disponible en este momento";
        }
        #bigger-div {
          display: none;
        }
        .greeting {
          display: none;
        }
      }
    </style>
  </div>
</Layout>
