        </a>
      </div>
      <div class="text-lg text-white button-email">
        <button id="copy-button">alucena1002@gmail.com </button>
        <p id="copied-message" class="mt-2 text-sm text-green-500 hidden">
          ¬°Correo copiado!
        </p>
      </div>
    </div>
    <LanguageSwitcher />
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const copyButton = document.getElementById("copy-button");
        const copiedMessage = document.getElementById("copied-message");

        if (!copyButton || !copiedMessage) {
          console.error("Elementos del DOM no encontrados");
          return;
        }

        copyButton.addEventListener("click", () => {
          const email: string = "alucena1002@gmail.com";

          navigator.clipboard
            .writeText(email)
            .then(() => {
              copyButton.classList.add("hidden");
              copiedMessage.classList.remove("hidden"); // Muestra el mensaje
              setTimeout(() => copyButton.classList.remove("hidden"), 2000);
              setTimeout(() => copiedMessage.classList.add("hidden"), 2000); // Oculta el mensaje despu√©s de 2 segundos
            })
            .catch((err: unknown) => {
              console.error("Error al copiar al portapapeles:", err);
            });
        });
      });
    </script>
